@model IEnumerable<SistemaGeonet.Models.OrdenPedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.fechapedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPago)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.carritoOrden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.metodoPago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechapedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carritoOrden.IdCarritoOrden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.metodoPago.IdMetodoPago)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrdenPedido">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrdenPedido">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrdenPedido">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
