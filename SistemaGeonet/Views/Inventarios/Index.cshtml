<div class="ofertas">
    <div class="titulo">
        <h3>Precios de Locura</h3>
    </div>
    <div class="container">
        <div class="row col-md-12">
            @foreach (var item in Model)
            {
                <div class=" col-md-3 col-sm-6">
                    <div class="product-grid7">
                        <div class="product-image7">
                            <a asp-controller="inventarios" asp-action="details" asp-route-id="@item.IdInventario">
                                <img class="pic-1" src="~/images/@Html.DisplayFor(modelItem => item.Equipo.imagen_catalogo)">
                            </a>
                            <ul class="social">
                                <li hidden><a href=""><i class="fas fa-search"></i></a></li>
                                <li hidden><a href=""><i class="fas fa-heart"></i></a></li>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li id="idcant" value="1" hidden></li>
                                    <li onclick="myFunction()"><a onclick="agregarCarrito(@Html.DisplayFor(modelItem => item.Equipo.idEquipo), 'idcant')"><i class="fas fa-shopping-cart"></i></a></li>
                                }
                                else
                                {
                                    <li value="1" hidden></li>
                                    <li><a onclick="agregarCarritoLS(@Html.DisplayFor(modelItem => item.Equipo.idEquipo))"><i class="fas fa-shopping-cart"></i></a></li>
                                }
                            </ul>
                            <span class="product-new-label">Oferta</span>
                        </div>
                        <div class="product-content">
                            <h3 class="title"><a href="#">@Html.DisplayFor(modelItem => item.Equipo.nombre)</a></h3>
                            <ul class="rating">
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                            </ul>
                            <div class="price">
                                $@Html.DisplayFor(modelItem => item.Equipo.precio)
                                <span>$@Html.DisplayFor(modelItem => item.Equipo.precio)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
