@model SistemaGeonet.Models.Inventario

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <hr>
    <div class="wrapper row">
        <div class="preview col-md-6">

            <div class="preview-pic tab-content">
                <div class="tab-pane active" id="pic-1"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_catalogo)" /></div>
                <div class="tab-pane" id="pic-2"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle1)" /></div>
                <div class="tab-pane" id="pic-3"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle2)" /></div>
                <div class="tab-pane" id="pic-4"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle3)" /></div>
            </div>
            <ul class="preview-thumbnail nav nav-tabs">
                <li class="active">
                    <a data-target="#pic-1" data-toggle="tab"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_catalogo)" /></a>
                </li>
                <li><a data-target="#pic-2" data-toggle="tab"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle1)" /></a></li>
                <li><a data-target="#pic-3" data-toggle="tab"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle2)" /></a></li>
                <li><a data-target="#pic-4" data-toggle="tab"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle3)" /></a></li>
                <li><a data-target="#pic-5" data-toggle="tab"><img src="~/images/@Html.DisplayFor(model => model.Equipo.imagen_detalle3)" /></a></li>
            </ul>

        </div>
        <div class="details col-md-6">
            <h3 class="product-title">@Html.DisplayFor(model => model.Equipo.nombre)</h3>
            <div class="rating">
                <div class="stars">
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </div>
                <span class="review-no">41 Opiniones</span>
            </div>
            <p class="product-description">
                @Html.DisplayFor(model => model.Equipo.descripcion)
            </p>
            <h4 class="price">Precio: <span>$180</span></h4>
            <p class="vote">
                <strong>91%</strong> de los compradores recomiendan este producto <strong>
                    (87
                    votos)
                </strong>
            </p>

            <div class="cantidad input-group">
                <span class="input-group-btn">
                    <button type="button" class="quantity-left-minus btn  btn-number" data-type="minus"
                            data-field="">
                        <i class="fas fa-minus"></i>
                    </button>
                </span>
                <input type="text" id="quantity" name="quantity" class="form-control input-number  text-center"
                       value="10" min="1" max="@Html.DisplayFor(model => model.cantidadVirtual)">
                <span class="input-group-btn">
                    <button type="button" class="quantity-right-plus btn  btn-number" data-type="plus"
                            data-field="">
                        <i class="fas fa-plus"></i>
                    </button>
                </span>
            </div>
            <div class="action">
                <button class="add-to-cart btn btn-default" type="button" onclick="agregarCarrito(@Html.DisplayFor(model => model.Equipo.idEquipo), 'quantity')">Agregar a carrito</button>
                <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
            </div>
        </div>
    </div>
    <hr>
</div>

<script src="~/js/agregar.js"></script>
