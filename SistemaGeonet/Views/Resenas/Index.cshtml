@model IEnumerable<SistemaGeonet.Models.Resena>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.comentario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.puntuacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idUsuario)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.equipo.idEquipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idResena">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idResena">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idResena">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
