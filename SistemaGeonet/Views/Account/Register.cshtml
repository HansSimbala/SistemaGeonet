@model RegisterViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <title>
        Registro
    </title>
    <link rel="shortcut icon" href="~/images/logotipo.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/bootstrap-4.3.1-dist/css/bootstrap.min.css">
    <link href="~/css/register.css" rel="stylesheet">
    <script src="~/js/fontawesome.min.js"></script>
    <script src="~/js/solid.min.js"></script>
    <script src="~/js/brands.min.js"></script>
</head>
<div class="container-fluid">
    <div class="row">

        <div class="col-md-7 register-info-box">
            <img src="../images/logo.png" alt="">
            <div class="info">
                <p class="titulo">
                    Bienvenido a Geonet
                </p>
                <p class="text-center">
                    ¿Ya tienes cuenta? <br>
                    Que esperas Inicia Sesión ahora mismo <br> y descubre lo que tenemos para ti
                </p>
                <a class="label-info" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Iniciar Sesión</a>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <a class="back" asp-area="" asp-controller="Home" asp-action="Index">@*<i class="fas fa-arrow-left"></i>*@ Volver</a>
        </div>
        <div class="col-md-5 formulario">
            <p class="titulo">
                REGISTRARSE
            </p>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div class="user">
                    <i class="fas fa-user">
                    </i>
                    <input asp-for="Email" placeholder="Email" required type="email">
                </div>
                <div class="password">
                    <i class="fas fa-key">
                    </i>
                    <input asp-for="Password" placeholder="Contraseña" id="txtContraseña" required type="password">
                    <a class="yes ">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="no d-none ">
                        <i class="fas fa-eye-slash "></i>
                    </a>
                </div>
                <div class="password">
                    <i class="fas fa-key">
                    </i>
                    <input asp-for="ConfirmPassword" placeholder=" Repetir Contraseña" id="txtContraseña" required type="password">
                    <a class="yes ">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="no d-none ">
                        <i class="fas fa-eye-slash "></i>
                    </a>
                </div>
                <div class="user">
                    <i class="fas fa-signature"></i>
                    <input asp-for="Nombres" placeholder="Nombres" required="required" type="text" />
                </div>

                <div class="dato1">
                    <div class="user ">
                        <i class="fas fa-signature"></i>
                        <input asp-for="ApellidoPaterno" placeholder="Apellido P" required="required" type="text" />
                    </div>
                    <div class="user ">
                        <i class="fas fa-signature"></i>
                        <input asp-for="ApellidoMaterno" placeholder="Apellido M" required="required" type="text" />
                    </div>
                </div>
                <div class="dato1">
                    <div class="user ">
                        <i class="fas fa-phone-square-alt"></i>
                        <input asp-for="Telefono" placeholder="Telefono" required="required" type="text" />
                    </div>
                    <div class="user ">
                        <i class="fas fa-map-marker-alt"></i>
                        <input asp-for="IdDireccion" placeholder="Direccion" required="required" type="text" />
                    </div>
                </div>

                <div class="dato1">
                    <select asp-for="IdTipoDocumento" class="document" id="tpd">
                        <option value="1">DNI</option>
                        <option value="2">Carnet de Extranjería</option>
                    </select>
                    <div class="user">
                        <i class="fas fa-id-card-alt"></i>
                        <input asp-for="Documento" placeholder="Ejemplo: 0687549889" required="required"
                               type="text" />
                    </div>


                </div>
                <button type="submit">Registrarse</button>

            </form>

        </div>
    </div>
</div>
<script defer="" src="~/js/fontawesome.min.js">
</script>
<script defer="" src="~/js/brands.min.js">
</script>
<script defer="" src="~/js/solid.min.js">
</script>
<script src="~/js/jquery-3.4.1.min.js">
</script>
<script src="~/js/login.js"></script>
